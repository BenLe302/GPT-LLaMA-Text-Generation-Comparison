# Variables d'environnement pour le projet GPT-LLaMA Text Generation Comparison
# Auteur: Dady Akrou Cyrille
# Email: cyrilledady0501@gmail.com

# ===== INFORMATIONS DU PROJET =====
PROJECT_NAME="Générateur de Texte IA - GPT & LLaMA"
PROJECT_DESCRIPTION="Application de génération de texte utilisant GPT-4 et LLaMA"
PROJECT_AUTHOR="Dady Akrou Cyrille"
PROJECT_EMAIL="cyrilledady0501@gmail.com"
VERSION="1.0.0"

# ===== APIS DE MODÈLES =====
# Clé API OpenAI (OBLIGATOIRE)
OPENAI_API_KEY=your-openai-api-key-here

# Configuration OpenAI
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=2048
OPENAI_TEMPERATURE=0.7

# Token Hugging Face (OPTIONNEL)
HF_API_TOKEN=your-huggingface-token-here
HF_MODEL_NAME=meta-llama/Llama-2-7b-chat-hf
HF_CACHE_DIR=./models/cache

# ===== BASE DE DONNÉES =====
DATABASE_URL=postgresql://postgres:password@localhost:5432/gpt_llama_db

# ===== CONFIGURATION API =====
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
API_WORKERS=1

# ===== SÉCURITÉ =====
SECRET_KEY=your-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# ===== LOGGING =====
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_ROTATION=10 MB
LOG_RETENTION=30 days

# ===== CHEMINS DES DONNÉES =====
DATA_DIR=data
RAW_DATA_DIR=data/raw
PROCESSED_DATA_DIR=data/processed
MODELS_DIR=models
RESULTS_DIR=results
EXPORTS_DIR=exports

# ===== DATASET TWCS =====
TWCS_DATASET_PATH=data/raw/twcs.csv
TWCS_PROCESSED_PATH=data/processed/twcs_processed.csv

# ===== CONFIGURATION DES MODÈLES =====
MAX_SEQUENCE_LENGTH=512
BATCH_SIZE=16
LEARNING_RATE=2e-5
NUM_EPOCHS=3

# ===== LIMITES DE L'API =====
RATE_LIMIT_PER_MINUTE=60
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=300

# ===== CONFIGURATION GRADIO =====
GRADIO_HOST=0.0.0.0
GRADIO_PORT=7860
GRADIO_SHARE=false

# ===== CONFIGURATION STREAMLIT =====
STREAMLIT_HOST=0.0.0.0
STREAMLIT_PORT=8501

# ===== MÉTRIQUES ET MONITORING =====
ENABLE_METRICS=true
METRICS_PORT=9090

# ===== CACHE =====
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# ===== DÉVELOPPEMENT =====
DEBUG=false
TESTING=false
ENVIRONMENT=development

# ===== CORS =====
CORS_ORIGINS=["*"]
CORS_METHODS=["*"]
CORS_HEADERS=["*"]

# ===== WEBHOOKS ET NOTIFICATIONS =====
WEBHOOK_URL=
SLACK_WEBHOOK_URL=

# ===== CONFIGURATION DOCKER =====
DOCKER_REGISTRY=localhost:5000
DOCKER_IMAGE_TAG=latest